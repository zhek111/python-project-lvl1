from prompt import string
from brain_games.greeting import name
question = None
сondition = None
correct_answer = None
positive_answer = None
negative_answer = None
update = None


def general_logic():
    update
    i = 1
    while i <= 3:
        print(f'Question: {question}')
        answer = string('Your answer:  ')
        if сondition == correct_answer and answer == positive_answer:
            print('Correct!')
            i = i + 1
            update
        elif сondition != correct_answer and answer == negative_answer:
            print('Correct!')
            i = i + 1
            update
        elif сondition == correct_answer and answer != positive_answer:
            print(f"'{answer}' is wrong answer ;(. Correct answer was '{positive_answer}'.")
            print(f"Let's try again,{name}")
            i = 1
            update
        elif сondition != correct_answer and answer != negative_answer:
            print(f"'{answer}' is wrong answer ;(. Correct answer was '{negative_answer}'.")
            print(f"Let's try again,{name}")
            i = 1
            update
    return(f'Congratulations, {name}!')
